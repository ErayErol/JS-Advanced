@model ToDoList.Models.Task
<div class=" col-md-4" style="margin-top:10px;">
    <h2>Do you want to delete this item?</h2>
    <input class="form-control" type="text" style="margin-top:10px" placeholder="@Model.Title" readonly>
    <input class="form-control" type="text" style="margin-top:10px" placeholder="@Model.Date" readonly>
    <textarea class="form-control" type="text" style="margin-top:10px" readonly> @Model.Comment</textarea>
    <form method="post">
        <button formmethod="post" class="btn btn-danger" style="margin-top:10px;" asp-controller="Task" asp-action="Delete" asp-route-id="@Model.Id">Confirm</button>
        <button formmethod="get" class="btn btn-dark " style="margin-top:10px;" asp-controller="Task" asp-action="Index">Cancel</button>
    </form>
</div>