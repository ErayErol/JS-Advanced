<div >
    <div class="col-md-4 " style="margin-top:10px; padding-top:10px">
        <form method="post">
            <div class="form-group">
                <label for="taskTitle"><b>Task Title:</b></label>
                <input type="text" class="form-control" id="taskTitle" name="title" placeholder="Task Title">
            </div>
            <div class="form-group">
                <label for="taskDate"><b>Task Date:</b></label>
                <input type="text" class="form-control" id="taskDate" name="date" placeholder="Task Date">
            </div>
            <div class="form-group">
                <label for="taskComment"><b>Task Comments</b></label>
                <textarea class="form-control" id="taskComment" name="comments" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-dark bg-success">Submit</button>
        </form>
    </div>
</div>